                    </StackPanel>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Click="OkButton_Click" 
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
